

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <!-- <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> -->
    <% @products.each_with_index do |product, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to='<%= index %>' class '<%= 'active' if product == @products.first %>'></li>
    <% end %>
  </ol>

  <div class="carousel-inner" role="listbox">
    <% @products.each do |product| %>
    <div class="carousel-item<%= " active" if product == @products.first %>">
      <%= image_tag(product.image_url, class: "img-fluid") %>
      <div class="carousel-caption">
        <%= product.name %>
      </div>
    </div>
    <% end %>
  </div>
</div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>
